<div id="content">
	<div class="container-fluid">
		<div class="container">
			<h1 style="color: white; padding-left: 16%">Registration</h1>
			<div class="col-md-6">
				<div class="panel panel-default text-center">
					<div class="panel-heading panel-heading-gray">
						<%= image_tag("green_logo_text.png", id: "logo_login") %>
					</div>
					<div class="panel-body">
						<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:multipart => true, :class => 'form-horizontal'}) do |f| %>

						<%= devise_error_messages! %>
						<div class="form-group">
							<label class="col-sm-3 control-label">Full Name</label>
							<div class="col-sm-9">
							<%= f.text_field :name, class: 'form-control', :autofocus => true, :placeholder => 'Full Name' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Email</label>
							<div class="col-sm-9">
							<%= f.email_field :email, class: 'form-control', :placeholder => 'Email address' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Password</label>
							<div class="col-sm-9">
							<%= f.password_field :password, class: 'form-control', :placeholder => 'Password' %>
							</div>
						</div>
						<div class="form-group">
							<label class="col-sm-3 control-label">Conform password</label>
							<div class="col-sm-9">
							<%= f.password_field :password_confirmation, class: 'form-control', :placeholder => 'Password confirmation' %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :date_of_birth, :class => 'col-sm-3 control-label'  %>
							<div class="col-sm-9">
							<%= f.text_field :date_of_birth, :class => "form-control datepicker" %>
							</div>
						</div>
						<div class="form-group">
							<%= f.label :avatar, :class => 'col-sm-3 control-label' %>
							<div class="col-sm-9">
							<%= f.file_field :avatar,  class: 'form-control' %>
							<%= f.hidden_field :avatar_cache %>
							</div>
						</div>
						<div class="form-group">
    						<%= button_tag( :class => "btn btn-primary") do %>
  								Sign up <i class="fa fa-play-circle"></i>
							<% end %>	
						</div>
						<% end %>
						<%= render "devise/shared/links" %>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>
