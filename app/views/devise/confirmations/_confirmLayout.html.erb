    <div id="content">
        <div class="container-fluid">
            <div class="lock-container">
                <h1>Account Access</h1>
                <div class="panel panel-default text-center">
                    <%= image_tag("green_logo_text.png", id: "logo_login") %>
                    <div class="panel-body">                       
                       <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name)) do |f| %>
  <h3>Resend confirmation instructions</h3>
  <%= devise_error_messages! %>

  <div class="form-group"><br />
  <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %></div>

<%= submit_tag "Resend confirmation instructions", {class: "btn btn-primary" } %>
<% end %>




              
                    </div>
                     <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
